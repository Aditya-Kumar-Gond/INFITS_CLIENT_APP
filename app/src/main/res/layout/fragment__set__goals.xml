                            <TextView
                                android:layout_marginEnd="15dp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/nats_regular"
                                android:textSize="15sp"
                                android:textAlignment="viewStart"
                                android:layout_width="0dp"

