<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentTodays_BreakFast">



<!--    <ScrollView-->
<!--        android:id="@+id/scrollView2"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.8">

                <ImageView
                    android:id="@+id/calorieImgback"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:padding="8dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    app:tint="#F6B566" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:fontFamily="@font/nats_regular"
                    android:gravity="center|start"
                    android:paddingStart="15dp"
                    android:text="Todayâ€™s Breakfast"
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textFontWeight="400"
                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_Todays_breakfast"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="29dp"

                    android:layout_marginEnd="29dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"

                android:layout_marginBottom="25dp"
                android:layout_marginStart="130dp"
                android:layout_marginEnd="130dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="top"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"

                    app:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/DoneButtonView"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/baloo2"
                        android:text="Done"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#F6B566"
                        android:textSize="25dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_layout2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:visibility="gone"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginEnd="25dp"
                android:translationZ="1dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom">


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:elevation="10dp"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true"
                    android:minHeight="76dp"
                    android:backgroundTint="#FF7777"
                    app:cardCornerRadius="15dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Breakfast calories updated!"
                        android:textSize="22sp"
                        android:fontFamily="@font/baloo2"
                        android:textColor="#FFFFFF"
                        android:textAlignment="gravity"
                        android:gravity="start|center"
                        android:paddingStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/approval"
                        android:paddingStart="15dp"
                        android:layout_gravity="end"
                        android:paddingEnd="5dp"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>


<!--    </ScrollView>-->

</androidx.constraintlayout.widget.ConstraintLayout>