<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/mealImage"
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:scaleType="fitXY"
        android:src="@drawable/pizza_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/calorieImgback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="28dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:tint="@color/white" />


        <ImageButton
            android:id="@+id/favouriteMealButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:padding="10dp"
            android:scaleType="fitEnd"

            android:src="@drawable/favorite" />
    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="65dp"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mealImage">

        <FrameLayout
            android:id="@+id/bottomSheetN"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:background="@drawable/rounded1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_marginStart="25dp">
                    <TextView
                        android:id="@+id/mealName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nats_regular"
                        android:text="Pizza"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="35dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:fontFamily="@font/nats_regular"
                        android:text="Nutrients Breakdown"
                        android:textColor="@color/black"
                        android:textSize="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="46dp"
                    android:layout_weight="0.4"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/fire" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/nats_regular"
                            android:text="Calories"
                            android:layout_marginTop="-10dp"

                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="20sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/calorieValue"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/nats_regular"
                            android:text="50"
                            android:layout_marginTop="-30dp"
                            android:gravity="top|center"
                            android:textAlignment="gravity"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/carbs" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/nats_regular"
                            android:text="Carbs"
                            android:textAlignment="center"
                            android:layout_marginTop="-10dp"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/carbsValue"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-30dp"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/nats_regular"
                            android:text="6.3 g"
                            android:textAlignment="center"
                            android:textColor="@color/black"

                            android:textFontWeight="400"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/proetin" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-10dp"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/nats_regular"
                            android:text="Protein"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/proteinValue"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-30dp"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/nats_regular"
                            android:text="6.3 g"
                            android:textAlignment="center"
                            android:textColor="@color/black"

                            android:textFontWeight="400"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/fat" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:layout_marginTop="-10dp"
                            android:fontFamily="@font/nats_regular"
                            android:text="Fat"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/fatValue"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.4"
                            android:layout_marginTop="-30dp"
                            android:fontFamily="@font/nats_regular"
                            android:text="5.2 g"
                            android:textAlignment="center"
                            android:textColor="@color/black"

                            android:textFontWeight="400"
                            android:textSize="25sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="-60dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="400"
                        android:fontFamily="@font/nats_regular"
                        android:text="Pick the quantity"
                        android:textColor="@color/black"
                        android:textSize="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="82dp"
                    android:layout_marginEnd="82dp"
                    android:orientation="horizontal"
                    android:layout_weight="0.5">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/uparrow1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:src="@drawable/baseline_keyboard_arrow_up_24"
                            android:background="@color/white"
                            android:layout_weight="1"/>
                        <com.shawnlin.numberpicker.NumberPicker
                            android:divider="@color/white"
                            android:id="@+id/numberPicker1"
                            android:layout_width="match_parent"
                            app:np_dividerThickness="0dp"

                            app:np_selectedTextSize="30dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginBottom="-5dp"

                            app:np_selectedTextColor="#030000"
                            app:np_textSize="20dp"
                            android:layout_weight="1.5"
                            android:layout_height="0dp"/>
                        <ImageButton
                            android:id="@+id/downarrow1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:src="@drawable/baseline_keyboard_arrow_down_24"
                            android:background="@color/white"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/uparrow2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:src="@drawable/baseline_keyboard_arrow_up_24"
                            android:background="@color/white"
                            android:layout_weight="1"/>
                        <com.shawnlin.numberpicker.NumberPicker
                            android:divider="@color/white"
                            android:id="@+id/numberPicker2"
                            android:layout_width="match_parent"
                            app:np_dividerThickness="0dp"
                            app:np_selectedTextSize="30dp"
                            app:np_selectedTextColor="#030000"
                            app:np_textSize="20dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginBottom="-5dp"
                            android:layout_weight="1.5"
                            android:layout_height="0dp"/>
                        <ImageButton
                            android:id="@+id/downarrow2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:src="@drawable/baseline_keyboard_arrow_down_24"
                            android:background="@color/white"
                            android:layout_weight="1"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="115dp"
                    android:layout_marginEnd="115dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/AddButton"
                        android:layout_width="match_parent"
                        android:background="@drawable/calorie_tracker_button_background"
                        android:text="Add"
                        android:fontFamily="@font/nats_regular"
                        android:textFontWeight="400"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_height="match_parent"/>

                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>