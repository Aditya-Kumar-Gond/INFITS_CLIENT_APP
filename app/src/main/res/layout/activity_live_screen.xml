<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:background="@drawable/live_screen_background"
    tools:context=".LiveScreen">

    <!-- Header -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="80dp">

            <ImageView
                android:id="@+id/dp"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:scaleType="fitXY"
                android:src="@drawable/profilepic" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nats_regular"
            android:text="John Wayne"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-5dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="47dp"
            android:layout_height="22dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/streaming_button"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="47dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/number_of_viewers"
            android:gravity="center"
            android:orientation="horizontal">
            
            <ImageView
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:src="@drawable/eye_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2k"
                android:layout_marginStart="3dp"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </LinearLayout>
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/close_icon_live_screen"
            />

    </LinearLayout>

    <!-- Bottom -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="750dp"
        android:gravity="center"
        >

        <RelativeLayout
            android:layout_width="248dp"
            android:layout_height="36dp"
            >

            <EditText
                android:id="@+id/edit_text_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_live_streaming"
                android:hint="Message"
                android:paddingStart="25dp"
                android:textSize="14sp"
                android:fontFamily="@font/raleway_regular"
                android:textColor="@color/white"
                android:padding="8dp"
                android:textColorHint="@color/white" />

            <ImageView
                android:id="@+id/image_view_send"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:padding="8dp"
                android:src="@drawable/send_icon_live_stream" />

        </RelativeLayout>
        
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/mic_icon_live_streaming"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/edit_icon_live_streaming"
            />

    </LinearLayout>

</LinearLayout>