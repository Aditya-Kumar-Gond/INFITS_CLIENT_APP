<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentTodays_Dinner">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/calorieImgback"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:paddingTop="20dp"
                android:paddingBottom="8dp"

                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:tint="#F6B566" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:fontFamily="@font/nats_regular"
                android:gravity="center"
                android:text="Dinner"
                android:textAlignment="gravity"
                android:textColor="#F0A344"
                android:textFontWeight="400"
                android:textSize="35sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.9"
            android:padding="5dp"
            android:layout_height="0dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Confirm your food selection"
                android:textSize="22dp"
                android:fontFamily="@font/nats_regular"
                android:textColor="@color/black"
                android:gravity="center|start"
                android:textFontWeight="400"
                android:layout_marginStart="28dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_Todays_meal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="29dp"
                android:layout_marginEnd="29dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="-15dp"
            android:layout_weight="2.9"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/info" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/breakfast_textborder"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/nats_regular"
                    android:text="The food items selected here are added"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#F6B566"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-12dp"
                    android:fontFamily="@font/nats_regular"
                    android:text="to the meal tracker and the calorie value"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#F6B566"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-12dp"
                    android:fontFamily="@font/nats_regular"
                    android:text="of each food item is added to the total"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#F6B566"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-12dp"
                    android:fontFamily="@font/nats_regular"
                    android:text="calorie consumed. "
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#F6B566"
                    android:textSize="18sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="25dp">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/DoneButtonView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/calorie_tracker_button_background"
                android:fontFamily="@font/nats_regular"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:translationZ="1dp"
            android:visibility="gone">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:scaleX="1.1"
                    android:scaleY="1.3"
                    android:src="@drawable/calorie_tracker_button_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/approval" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nats_regular"
                        android:text="Dinner Calories updated!"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>